<table class="table table-hover table-striped">
    <tr>
        <th width="5%">ID</th>
        <th width="35%">名称</th>
        <th width="40%">描述</th>
        <th width="10%">操作</th>
    </tr>

    <% list.forEach(function(item, index){ %>
    <tr>
        <td><%= item.id %></td>
        <td><%= item.name %></td>
        <td><%= item.desc %></td>
        <td>
            <a href="/add?name=<%= item.name %>">编辑</a>
            <a href="javascript:" class="delet" data-name=<%= item.name %>>删除</a>
        </td>
    </tr>
    <% }) %>

</table>

<script>
$(document).delegate(".delet","click",function(){
	var name = $(this).data("name");

    var result = confirm("你确定要删除 " + name + " 接口吗？");

    if(result){
        $.ajax({
            type: "POST",
            url: "/remove",
            data: {name: name},
            dataType: "json",
            success: function(res){
                if(!res.status){
                    alert("删除成功！");
                    location.href = "/";
                } else{
                    alert("删除失败，请稍后重试！");        
                }

            }
        });
    }

})
</script>